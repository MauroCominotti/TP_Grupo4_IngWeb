@using Microsoft.AspNetCore.Components

<h3>Person</h3>

<h3>
    Hello, @APerson.FirstName
    <br />
    <input type="button" @onclick="ChangeName" value="Change Name" />
    <br />
</h3>

<table class="table">
    <thead>
        <tr>
            <th>
                Fist Name
            </th>
            <th>
                Last Name
            </th>

        </tr>
    </thead>
    <tbody>
        <tr>
            <td>
                @APerson.FirstName
            </td>

            <td>
                @APerson.LastName
            </td>
        </tr>
    </tbody>
</table>

@code {
    [Parameter]
    public ApplicationUser APerson { get; set; }

    private void ChangeName()
    {
        APerson.FirstName = APerson.FirstName == "New Name" ? "Cambiaso" : "New Name";
    }
}
